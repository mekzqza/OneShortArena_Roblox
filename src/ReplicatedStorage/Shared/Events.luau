function Events.GetAllEvents(): {string}
	local allEvents = {}
	-- ‡πÉ‡∏ä‡πâ table set ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö O(1) lookup
	local excludedKeys = {
		GetAllEvents = true,
		PrintAllEvents = true
	}
	
	-- ‡πÄ‡∏Å‡πá‡∏ö‡πÄ‡∏â‡∏û‡∏≤‡∏∞ string values ‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡πÉ‡∏ä‡πà‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô
	for key, value in pairs(Events) do
		if type(value) == "string" and not excludedKeys[key] then
			table.insert(allEvents, value)
		end
	end
	return allEvents
end

--[[
	PrintAllEvents: ‡πÅ‡∏™‡∏î‡∏á Events ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÉ‡∏ô console
