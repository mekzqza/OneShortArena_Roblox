	print("\n" .. string.rep("=", 60))
	print("üìã All Available Events (" .. #allEvents .. " total)")
	print(string.rep("=", 60))
	
	for i, eventName in ipairs(allEvents) do
		print(string.format("%3d. %s", i, eventName))
	end
	
	print(string.rep("=", 60) .. "\n")
end

return Events
